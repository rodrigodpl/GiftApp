<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:background="@color/lightGray"
    android:padding="@dimen/tab_padding"
    android:onClick="SearchFriendName">

    <TextView
        android:id="@+id/friend_red_tab_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/friend_red_tab_profilename"
        android:layout_alignStart="@+id/friend_red_tab_profilename"
        android:layout_below="@+id/friend_red_tab_profilename"
        android:layout_marginTop="7dp"
        android:text="username"
        android:textAppearance="@android:style/TextAppearance.Holo.Medium" />

    <ImageView
        android:layout_width="72dip"
        android:layout_height="72dip"
        android:scaleType="centerCrop"
        android:src="@drawable/button_icon_bluesky" />

    <TextView
        android:id="@+id/friend_red_tab_profilename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="19dp"
        android:layout_marginRight="19dp"
        android:layout_marginTop="7dp"
        android:text="profile name"
        android:textAppearance="@android:style/TextAppearance.Holo.Medium" />

</RelativeLayout>