<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/tab_padding"
    android:background="@color/lightGray">

    <ImageView
        android:id="@+id/thumbnail"
        android:src="@drawable/button_icon_bluesky"
        android:layout_width="72dip"
        android:layout_height="72dip"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/friend_tab_profilename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="?android:attr/listPreferredItemPaddingLeft"
        android:layout_toRightOf="@+id/thumbnail"
        android:text="profilename"
        android:textAppearance="@android:style/TextAppearance.Holo.Medium" />

    <TextView
        android:id="@+id/friend_tab_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/friend_tab_profilename"
        android:layout_alignStart="@+id/friend_tab_profilename"
        android:layout_below="@+id/friend_tab_profilename"
        android:layout_toLeftOf="@+id/friend_tab_opt"
        android:text="username"
        android:textAppearance="@android:style/TextAppearance.Holo.Small" />

    <ImageButton
        android:id="@+id/friend_tab_enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_media_play"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:id="@+id/friend_tab_opt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_preferences"
        android:layout_alignTop="@+id/friend_tab_enter"
        android:layout_toLeftOf="@+id/friend_tab_enter"
        android:layout_toStartOf="@+id/friend_tab_enter"
        android:layout_marginRight="7dp"
        android:layout_marginEnd="7dp"/>

</RelativeLayout>